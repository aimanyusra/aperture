<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <nav>
      <a class="navbar-brand" href="/"><i class="fa fa-camera" aria-hidden="true"></i> Aperture</a>
            <!-- beginning of search form -->
        
     <!-- beginning of search form -->
      <div class="search">
        <div class="col col-lg-6">
          <div class="input-group">
              <%= form_tag search_path, method: "get", remote: true, class: "navbar-form navbar-left" do |f| %>
              <%= text_field_tag :text, params[:text],placeholder:"Search photos", class: 'form-control input-lg' %>
                <span class="input-group-btn">
                <%= submit_tag 'search', class: 'btn btn-default' %>
                </span>
                <!-- end of search form -->
              <% end %>
            </div>
          </div>
        <!-- end of search div -->
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in? %>
          <li><%= link_to current_user.name, current_user %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log In", login_path %></li>
          <li><%= link_to "Sign Up", new_user_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>