<div class="row">	
	<div class="text-center">
		<p><%= @greet.sample %> by <strong><%= link_to @photo.user.name, user_path(@photo.user.id) %></strong></p>
		<div class="cover-img" style="background-image: url(<%= @photo.photo_images[0].image %>)"></div>
		<p></p>
		<% if !@photo.tags.empty? %>
			<strong><p>Tags: </p></strong> 		 
			<% @photo.tags.each do |x| %>
			  <%= x.name %>
			<% end %>
		<% else %>
			<strong><p>This photo isn't tagged yet </p></strong> 
		<% end %>
	</div>
</div>

<div class="row">
	<div class="text-center">
		<br>
		<p><%= link_to 'Submit Another?', submit_path %></p>
	</dir>
</div>

<% if current_user.id == @photo.user.id %>
	<%= link_to 'Edit', edit_photo_path(@photo) %> |
<% end %>
