<% provide(:title, "Log in") %>



<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <h1 class="text-center"><strong>Log in</strong></h1>
  <h4 class="text-center">Welcome.</h4>
  <br>
  <a href="auth/facebook" class="btn btn-facebook btn-lg btn-block"><span><i class="fa fa-facebook-official" aria-hidden="true"></i></span> Sign in with Facebook</a>
  <br>
  <h3 class="text-center">or</h3>
  <br>
    <div class="form-group">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email, class: 'control-label' %>
        <%= f.email_field :email, class: 'form-control', id: 'inputDefault' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', id: 'inputError' %>

        <%= f.submit "Log in", class: "btn btn-primary" %>
      <% end %>
      <br>
      <p>New user? <%= link_to "Sign up now!", sign_up_path %>
    </div>
</p>

  </div>
</div>
